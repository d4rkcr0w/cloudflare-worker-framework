{
  "name": "cloudflare-worker-framework",
  "version": "0.0.0-development",
  "description": "Cloudflare Worker Framework",
  "keywords": [
    "cloudflare",
    "worker",
    "framework",
    "express",
    "koa",
    "router"
  ],
  "author": {
    "name": "D4rkCr0w",
    "email": "me@d4rkcr0w.com",
    "url": "https://www.d4rkcr0w.com/"
  },
  "bugs": "https://github.com/d4rkcr0w/cloudflare-worker-framework/issues",
  "homepage": "https://github.com/d4rkcr0w/cloudflare-worker-framework#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/d4rkcr0w/cloudflare-worker-framework.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -d",
    "build:test": "webpack",
    "dev": "wrangler dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "mime": "^3.0.0",
    "qs": "^6.10.1",
    "trek-router": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.0.0",
    "@cloudflare/wrangler": "^1.19.8",
    "@types/jest": "^27.4.1",
    "@types/mime": "^2.0.3",
    "@types/node": "^17.0.21",
    "@types/qs": "^6.9.7",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{json,js,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb-base",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "jest",
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/sort": "error",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "ts": "never"
        }
      ]
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/github",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
